{
  "name": "crowdfunding",
  "version": "0.0.1",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -w index.js -w constants.js -w server index.js",
    "build": "next build",
    "start": "node index.js",
    "precommit": "lint-staged",
    "standardize": "standard --fix 'components/**/*.js' 'lib/**/*.js' 'pages/**/*.js'"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      "markdown-in-js/babel"
    ]
  },
  "dependencies": {
    "@project-r/styleguide": "^0.1.6",
    "body-parser": "^1.15.2",
    "connect-pg-simple": "^3.1.2",
    "cross-env": "^3.2.4",
    "express": "^4.15.2",
    "express-basic-auth": "^1.0.1",
    "express-session": "^1.14.2",
    "glamor": "^2.20.24",
    "graphql": "^0.9.1",
    "lusca": "^1.4.1",
    "markdown-in-js": "^1.1.3",
    "next": "^2.0.0-beta.39",
    "passport": "^0.3.2",
    "pogi": "^2.2.1",
    "react": "^15.4.2",
    "react-apollo": "^1.0.0-rc.2",
    "redux": "^3.6.0",
    "request": "^2.81.0",
    "request-promise-native": "^1.0.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "dotenv": "^4.0.0",
    "husky": "^0.13.2",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "standard": "^9.0.2"
  }
}
