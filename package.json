{
  "name": "crowdfunding",
  "version": "0.0.1",
  "engines": {
    "node": "7.7.4"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -w index.js -w constants.js -w server index.js",
    "build": "next build",
    "start": "node index.js",
    "precommit": "lint-staged",
    "standardize": "standard --fix 'components/**/*.js' 'lib/**/*.js' 'pages/**/*.js'",
    "heroku-postbuild": "npm run build",
    "translations": "gsheets --key=1OHoiENwJH-tqf9yXfXHOevAn17daO_CvB21Rym-oiqk --title=live --pretty --out lib/translations.json"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "markdown-in-js/babel"
    ]
  },
  "dependencies": {
    "@project-r/styleguide": "^0.3.5",
    "cross-env": "^3.2.4",
    "d3-array": "^1.1.1",
    "d3-ease": "^1.0.3",
    "d3-format": "^1.1.1",
    "d3-time": "^1.0.6",
    "d3-time-format": "^2.0.5",
    "email-validator": "^1.0.7",
    "express": "^4.15.2",
    "express-basic-auth": "^1.0.1",
    "glamor": "^2.20.24",
    "graphql": "^0.9.1",
    "js-sha1": "^0.4.1",
    "markdown-in-js": "^1.1.3",
    "next": "^2.1.1",
    "react": "^15.4.2",
    "react-apollo": "^1.0.0-rc.2",
    "react-maskedinput": "^3.3.4",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "dotenv": "^4.0.0",
    "gsheets": "^2.0.0",
    "husky": "^0.13.2",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "standard": "^9.0.2"
  }
}
